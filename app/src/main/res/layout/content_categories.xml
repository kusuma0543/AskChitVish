<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_categories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.k3ench.chitvish.Categories"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_categories">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="3">
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Search"
        android:id="@+id/e1"
        android:paddingRight="20dp"
        android:layout_weight="2"/>

        <Button
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_search"
            android:id="@+id/bt"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
       <ImageButton
           android:layout_width="match_parent"
           android:layout_height="184dp"
           android:id="@+id/b1"
           android:background="@drawable/cookies"
android:layout_weight="1"
           />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:id="@+id/b2"
            android:background="@drawable/dessert"
android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/t1"
        android:text="Cookies and Cakes"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/t2"
            android:text="  Desserts and Icecreams"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:id="@+id/b3"
                android:background="@drawable/drinks"
                android:layout_weight="1"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:id="@+id/b4"
                android:background="@drawable/health"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/t3"
                android:text="Drinks and Smoothies"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/t4"
                android:text="  Health and Herbal Food"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </LinearLayout>
</LinearLayout>
